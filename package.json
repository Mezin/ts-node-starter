{
  "name": "ts-node-starter",
  "version": "1.0.0",
  "description": "starter kit for nodejs express app with typescript",
  "main": "index.js",
  "scripts": {
    "start": "node --inspect=5454 -r ts-node/register ./src/app.ts",
    "start:watch": "nodemon",
    "serve": "nodemon --inspect --watch dist/ -d 1 ./dist/app.js",
    "build": "tsc",
    "watch-ts": "tsc -w",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "dependencies": {
    "@hapi/joi": "^16.1.8",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-joi-validation": "^4.0.3",
    "uuid": "^3.3.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/eslint": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/hapi__joi": "^16.0.4",
    "@types/node": "^12.12.20",
    "@types/connect-mongo": "^3.0.0",
    "@types/mongoose": "^5.5.18",
    "@types/passport": "^1.0.1",
    "@types/uuid": "^3.4.6",
    "@types/body-parser": "^1.17.1",
    "@types/winston": "^2.4.4",
    "@types/jest": "^24.0.23",
    "@types/chai": "^4.2.3",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "jest": "^24.9.0",
    "chai": "^4.2.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "eslint": "^6.4.0",
    "ts-node": "^8.4.1",
    "nodemon": "^2.0.1",
    "typescript": "^3.6.3"
  }
}
